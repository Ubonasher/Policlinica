@model Policlinica.Models.Vrem

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/combobox.css" rel="stylesheet" />
<h2>Создать</h2>
<br>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Vrem</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Дата)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Дата)
            @Html.ValidationMessageFor(model => model.Дата)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Время)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Время)
            @Html.ValidationMessageFor(model => model.Время)
        </div>
        <br>
        Врач: <select id="VrType" name="UN" class="form-control combobox">
            @foreach (var item in ViewBag.Врач)
            {
                <option value="@item">@item</option>
            }
        </select>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "IndexAdm","Vrem",null,null)
</div>

@section Scripts {
<script src="~/Scripts/jquery.combobox.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
