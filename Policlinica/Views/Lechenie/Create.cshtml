@model Policlinica.Models.Lechenie

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/combobox.css" rel="stylesheet" />

<h2>Выписка рецепта </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Lechenie</legend>
        <br>
        <div class="editor-label">
            @Html.LabelFor(model => model.Диагноз, "Диагноз")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Диагноз", null, htmlAttributes: new { @class = "form-control combobox" })
            @Html.ValidationMessageFor(model => model.Диагноз, "", new { @class = "text-danger" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Рецепт)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Рецепт)
            @Html.ValidationMessageFor(model => model.Рецепт)
        </div>

        <div>
            ФИО пациента : @ViewBag.Время.UserProfile.ФИО
        </div>
        
        <div>
            Дата : @ViewBag.Время.Время
            &nbsp;
            @ViewBag.Время.Дата.ToString("d", ViewBag.fmt)
        </div>
        
        <p>
            <input id="vremID" name="vremID" type="hidden" value="@ViewBag.Время.Id" />
            <input type="submit" value="Выписать" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("История болезней пациента", "Index", new { Pac = ViewBag.Время.UserProfile.UserName, VremId = ViewBag.VremId })
</div>

<div>
    @Html.ActionLink("Посмотреть справочник болезней", "Index", "Diagnoz", new { VremId = ViewBag.VremId }, null)
</div>
<br>
<div>
    @Html.ActionLink("Назад", "Index","Zaj",null,null)
</div>

@section Scripts {
    <script src="~/Scripts/jquery.combobox.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
