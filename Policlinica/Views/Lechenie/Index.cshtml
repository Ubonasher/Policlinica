@model IEnumerable<Policlinica.Models.Lechenie>

@{
    ViewBag.Title = "Index";
}

<h2>История болезней</h2>
@if (Model.Count() == 0)
{
    <div>
        <br>
        История болезней пуста
    </div>
}
else { 
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Diagnoz.Диагноз)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vrem.Дата)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Diagnoz.Диагноз, "Details", new { id = item.Id, Pac = ViewBag.Pac, VremId = ViewBag.VremId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vrem.Дата)
            </td>
        </tr>
    }
</table>
}
<br>
@Html.ActionLink("Назад", "Create", "Lechenie", new { id = ViewBag.VremId }, null)